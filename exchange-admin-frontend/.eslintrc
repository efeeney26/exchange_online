{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "class-methods-use-this": "off",
    "no-shadow": "off",
    "no-plusplus": "off",
    "import/prefer-default-export": "off",
    "import/named": "off",
    "object-curly-newline": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      {
        "code": 140,
        "tabWidth": 4
      }
    ],
    "indent": [
      "error",
      4,
      { "SwitchCase": 1 }
    ],
    "react/destructuring-assignment": "off",
    "react/jsx-indent-props": [
      "error",
      4
    ],
    "react/jsx-indent": [
      "error",
      4
    ],
    "react/jsx-filename-extension": "off",
    "react/require-default-props": "off",
    "react/forbid-prop-types": "off"
  },
  "env": {
    "browser": true,
    "node": true
  }
}
